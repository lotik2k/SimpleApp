<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.White" parent="Theme.AppCompat.Light">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@color/grey_color</item>
        <item name="colorPrimaryDark">@color/grey_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.White.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/grey_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainButton">
        <item name="android:background">@drawable/next_button</item>
        <item name="android:textColor">@color/button_next_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.15</item>
    </style>


    <style name="TextStyleSearch1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleSearch2">
        <item name="android:textColor">@drawable/search_place_button_state</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:textColorHint">@drawable/search_place_button_hint_state</item>
    </style>

    <style name="TextStyleSearch3">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">9sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.25</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextStyleSearch4">
        <item name="android:textColor">@drawable/search_place_button_white_state</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="SwitchTrain">
        <item name="android:thumb">@drawable/switch_thumb_train</item>
        <item name="trackTint">@color/switch_train</item>
    </style>

    <style name="SwitchBus">
        <item name="android:thumb">@drawable/switch_thumb_bus</item>
        <item name="trackTint">@color/switch_bus</item>
    </style>

    <style name="SwitchPlain">
        <item name="android:thumb">@drawable/switch_thumb_plain</item>
        <item name="trackTint">@color/switch_plain</item>
    </style>

    <style name="TextStyleDateSelect">
        <item name="android:textColor">@color/text_color_grey</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleDateSelectCalendarHeader">
        <item name="android:textColor">#F500030A</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:capitalize">words</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.15</item>
    </style>

    <style name="TextStyleDateSelectCalendarWeekDay">
        <item name="android:textColor">#6D7BA3</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.15</item>
    </style>

    <style name="TextStyleDateSelectCalendarDay" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/date_select_calendar_days_color</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.15</item>
    </style>

    <style name="TextStylePlaceSearchCity">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextStylePlaceSearchState">
        <item name="android:textColor">@color/hint_common</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextStylePlaceSearchLabel">
        <item name="android:textColor">@color/hint_common</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.25</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonStyleDateSelect">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/date_select_button_text_color</item>
    </style>

    <style name="TextStylePlaceSearchTitle">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.2</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PassengersComfortTypeButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="PassengersLabelMain">
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PassengersLabelHint">
        <item name="android:textColor">@color/hint_common</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="PassengersComfortTypesButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/state_button_dialog_passengers_comfort_type</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:button">@drawable/state_button_dialog_passengers_comfort_type</item>
    </style>

    <style name="PassengersAgeCategoriesInfo">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hint_common</item>
    </style>

</resources>
